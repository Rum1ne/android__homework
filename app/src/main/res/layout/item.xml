<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardCornerRadius="20dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#7C9FD5"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/news_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="16dp"
                tools:text="Dancers" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignBottom="@+id/news_name"
                android:layout_marginBottom="-260dp"
                android:scrollbarSize="50dp"
                android:paddingHorizontal="10dp"
                tools:src="@drawable/dancers" />


            <View
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-50dp"
                android:background="@drawable/button_style1"
                />

            <TextView
                android:id="@+id/number_of_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="18dp"
                android:textColor="#C6000000"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="60dp"
                android:layout_marginBottom="-41dp"
                />

            <ImageView
                android:id="@+id/like_picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="-50dp"
                android:src="@drawable/emptyheart"
                />

            <Button
                android:onClick="onClick"
                android:id="@+id/button_of_like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="-55dp"
                android:background="#00000000"
                />


            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="120dp"
                android:layout_marginBottom="-50dp"
                android:background="@drawable/button_style1"
                />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="124dp"
                android:layout_marginBottom="-47dp"
                android:src="@drawable/comment" />

            <Button
                android:onClick="onClick"
                android:id="@+id/button_of_comment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="115dp"
                android:layout_marginBottom="-55dp"
                android:background="#00000000"
                />


            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="180dp"
                android:layout_marginBottom="-50dp"
                android:background="@drawable/button_style1"
                />

            <ImageView
                android:id="@+id/share"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="182dp"
                android:layout_marginBottom="-48dp"
                android:src="@drawable/share" />

            <Button
                android:onClick="onClick"
                android:id="@+id/button_of_share"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/image"
                android:layout_marginLeft="175dp"
                android:layout_marginBottom="-55dp"
                android:background="#00000000"
                />








        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>